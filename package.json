{
	"name": "portfolio",
	"private": true,
	"version": "0.1.0",
	"type": "module",
	"description": "A Portfolio Project using Tailwind, TypeScript, React, Vite, Prettier, Lottie and ESLint",
	"author": "Ren√© Weiberlenn",
	"license": "MIT",
	"keywords": [
		"typescript",
		"prettier",
		"eslint",
		"react",
		"vite",
		"lottie",
		"tailwindcss",
		"eslint-plugin-react",
		"prettier-plugin-tailwindcss"
	],
	"scripts": {
		"dev": "vite",
		"build": "tsc -b && vite build",
		"type-check": "tsc --noEmit",
		"lint": "eslint . --max-warnings 0 --report-unused-disable-directives",
		"lint:fix": "npm run lint -- --fix",
		"format": "prettier --check .",
		"format:fix": "prettier --write .",
		"preview": "vite preview",
		"prepare": "husky"
	},
	"lint-staged": {
		"*.{js,ts}": [
			"npm run lint",
			"npm run format"
		],
		"*.{json,yml,yaml}": [
			"npm run format"
		]
	},
	"dependencies": {
		"@tailwindcss/vite": "^4.1.6",
		"framer-motion": "^12.11.4",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"react-hook-form": "^7.62.0",
		"react-hot-toast": "^2.6.0",
		"react-icons": "^5.5.0",
		"react-lottie": "^1.2.10",
		"react-markdown": "^10.1.0",
		"react-router": "^7.6.0",
		"tailwindcss": "^4.1.6"
	},
	"devDependencies": {
		"@eslint/js": "^9.26.0",
		"@types/react": "^19.1.2",
		"@types/react-dom": "^19.1.2",
		"@types/react-lottie": "^1.2.10",
		"@vitejs/plugin-react": "^4.4.1",
		"eslint": "^9.26.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-prettier": "^5.4.0",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.20",
		"globals": "^16.1.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.0.0",
		"prettier": "3.5.3",
		"prettier-plugin-tailwindcss": "0.6.11",
		"typescript": "~5.8.3",
		"typescript-eslint": "^8.32.1",
		"vite": "^6.3.5"
	}
}
